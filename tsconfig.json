{
    "compilerOptions": {
        "target": "ESNext",
        "module": "commonjs",
        "rootDir": "./src/",
        "outDir": "./lib/",
        "strict": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "removeComments": true,
        "typeRoots": [
            "node_modules/@types",
        ],
        "sourceMap": false,
        "baseUrl": "./",
    },
    "files": [
        "src/main.ts"
    ],
    "include": [
        "./src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "lib",
        "src/tests"
    ]
  }